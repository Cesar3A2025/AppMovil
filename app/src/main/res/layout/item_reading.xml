<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke_modern"
    app:cardBackgroundColor="@color/coffee"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header con gradiente moderno -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/header_gradient"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Fecha -->
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="0.02"
                android:text="2025-10-02"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <!-- Hora con icono -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="14:35"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:ignore="SpUsage" />
            </LinearLayout>
        </LinearLayout>

        <!-- Grid de métricas moderno -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:rowCount="3">

            <!-- Temperatura Ambiente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/temp_icon"

                        android:src="@drawable/ic_room_temp" />

                    <TextView
                        android:id="@+id/txtTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="T. Ambiente:25°C"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Humedad Ambiente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/humidity_icon"

                        android:src="@drawable/ic_ambient_hum" />

                    <TextView
                        android:id="@+id/txtHum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_horizontal"
                        android:text="H. Ambiente:60%"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Temp Suelo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/temp_soil_icon"

                        android:src="@drawable/ic_soil_temp" />

                    <TextView
                        android:id="@+id/txtTemp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="T. Suelo:25°C"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Humedad Suelo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/soil_icon"

                        android:src="@drawable/ic_soil_hum" />

                    <TextView
                        android:id="@+id/txtSuelo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="H. Suelo:45%"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gases -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/mq135_icon"

                        android:src="@drawable/ic_gas_concentration" />

                    <TextView
                        android:id="@+id/txtMq135"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Gases:200ppm"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado Composta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/fondo"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/air_quality_icon"

                        android:src="@drawable/ic_composted_state" />
                    <TextView
                        android:id="@+id/txtAire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Composta:BUENA"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>