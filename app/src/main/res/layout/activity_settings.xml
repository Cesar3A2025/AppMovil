<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_backdround"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_coffee"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:elevation="6dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fase del compostaje"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <RadioGroup
            android:id="@+id/rgFases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle"
            android:clipToPadding="false">

            <RadioButton
                android:id="@+id/rbInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicial"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:buttonTint="@android:color/white"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:buttonTint="@android:color/white"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:buttonTint="@android:color/white"
                android:padding="12dp" />

        </RadioGroup>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="@color/air_quality_good"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>

</RelativeLayout>
