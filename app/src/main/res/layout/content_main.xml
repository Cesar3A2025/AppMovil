<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/login_style"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:contentDescription="Menú"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="60dp"
            android:text="DASHBOARD"
            android:textColor="#212121"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Estado del ambiente"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Columna izquierda: Temperatura -->
                <TextView
                    android:id="@+id/labelTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Temperatura"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline33" />

                <TextView
                    android:id="@+id/valTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTemp" />

                <TextView
                    android:id="@+id/valTempPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@id/valTemp"
                    app:layout_constraintStart_toEndOf="@id/valTemp" />

                <!-- Gráfico de temperatura -->
                <FrameLayout
                    android:id="@+id/flTempRing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="@id/guideline33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="25dp"
                    >

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/dashTemperatura"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <ImageView
                        android:id="@+id/iconTemperatura"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thermostat" />
                </FrameLayout>

                <!-- Columna derecha: Humedad -->
                <TextView
                    android:id="@+id/labelHum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Humedad"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="@id/guideline66"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="14dp"
                    />

                <TextView
                    android:id="@+id/valHum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/labelHum"
                    app:layout_constraintStart_toStartOf="@id/guideline66"
                    />

                <TextView
                    android:id="@+id/valHumPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@id/valHum"
                    app:layout_constraintStart_toEndOf="@id/valHum" />

                <!-- Gráfico de humedad -->
                <FrameLayout
                    android:id="@+id/flHumRing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toEndOf="@id/guideline99"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="25dp"
                    >

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/dashHumedad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iconHumedad"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_water_drop" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Guías para dividir en 3 columnas -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Estado del suelo"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Columna izquierda: Temperatura -->
                <TextView
                    android:id="@+id/labelTemp2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Temperatura"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline111" />

                <TextView
                    android:id="@+id/valTemp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTemp2" />

                <TextView
                    android:id="@+id/valTempPercent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@id/valTemp2"
                    app:layout_constraintStart_toEndOf="@id/valTemp2" />

                <!-- Gráfico de temperatura -->
                <FrameLayout
                    android:id="@+id/flTempRing2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintStart_toStartOf="@id/guideline111"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="25dp"
                    >

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/dashHumedadSuelo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <ImageView
                        android:id="@+id/iconTemperatura2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thermostat2" />
                </FrameLayout>

                <!-- Columna derecha: Humedad -->
                <TextView
                    android:id="@+id/labelHum2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Humedad"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintStart_toStartOf="@id/guideline222"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="14dp"
                    />

                <TextView
                    android:id="@+id/valHum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/labelHum2"
                    app:layout_constraintStart_toStartOf="@id/guideline222"
                    />

                <TextView
                    android:id="@+id/valHumPercent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@id/valHum2"
                    app:layout_constraintStart_toEndOf="@id/valHum2" />

                <!-- Gráfico de humedad -->
                <FrameLayout
                    android:id="@+id/flHumRing2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintStart_toEndOf="@id/guideline333"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="25dp"
                    >

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/dashTemperaturaSuelo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iconHumedad2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_water_drop2" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />


                <TextView
                    android:id="@+id/tvTitle3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Concentración de Gas"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Columna izquierda: Temperatura -->
                <TextView
                    android:id="@+id/labelTemp3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Partes Por Millon"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/divider3"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/valGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTemp3" />

                <TextView
                    android:id="@+id/valTempPercent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPM"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@id/valGas"
                    app:layout_constraintStart_toEndOf="@id/valGas" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvComposicionGas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Composicion de Gas"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divComp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvComposicionGas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartGases"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintBaseline_toBottomOf="@id/divComp"
                        />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvGraficoHistorico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Grafico Historico"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divGrafHistorico"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvGraficoHistorico"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/dashHistorico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintBaseline_toBottomOf="@id/divGrafHistorico"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
