        <!-- Sección gráfico histórico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Gráfico Histórico"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Gráfico de barras -->

        <!-- Requiere Material Components en tu theme -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHistoric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_beige">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitleHistoric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gráfico Histórico"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary" />

                <!-- Cabecera: mes y flechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/btnPrevDay"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_chevron_left" />

                    <TextView
                        android:id="@+id/tvMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Agosto 2025"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <ImageView
                        android:id="@+id/btnNextDay"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_chevron_right" />
                </LinearLayout>

                <!-- Rango horario + chips de intervalo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="space_between"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_time"/>
                        <TextView
                            android:id="@+id/tvRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00 – 09:00"
                            android:layout_marginStart="6dp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip1"
                            style="@style/Widget.My.Chip.Filter"
                            android:text="1 min." />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip2"
                            style="@style/Widget.My.Chip.Filter"
                            android:text="2 min." />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip5"
                            style="@style/Widget.My.Chip.Filter"
                            android:text="5 min." />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip10"
                            style="@style/Widget.My.Chip.Filter.Checked"
                            android:text="10 min." />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>

                <!-- El gráfico -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/dashHistorico"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent" />

                <!-- Leyenda estilo “Ambiente | Suelo | Gas” -->
                <LinearLayout
                    android:id="@+id/legendCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="4dp">

                    <!-- Repite este bloque cambiando color/texto -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambiente"
                        android:textColor="@color/text_secondary"
                        android:drawablePadding="6dp"
                        android:padding="4dp"
                        android:drawableStart="@drawable/dot_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suelo"
                        android:textColor="@color/text_secondary"
                        android:drawablePadding="6dp"
                        android:padding="4dp"
                        android:drawableStart="@drawable/dot_yellow"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gas"
                        android:textColor="@color/text_secondary"
                        android:drawablePadding="6dp"
