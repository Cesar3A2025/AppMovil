<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SensorCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SensorBigValue">
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.My.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/text_secondary</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Chip.Pill</item>
    </style>

    <style name="Widget.My.Chip.Filter.Checked" parent="Widget.My.Chip.Filter">
        <item name="chipBackgroundColor">@color/text_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Shape.Chip.Pill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.Chip.Custom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>